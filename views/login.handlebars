{{!-- Login or Signup page --}}

{{!-- Login --}}
<div class="row ">
    <div class="col-12 col-md-5 card p-4 mx-2 mb-4 mb-md-0 login">
        <h2 class="card-title login1">Login</h2>

        <form class="form login-form card-text">
            <div class="form-group my-4">
                <label for="email-login"></label>
                <input placeholder="Email" class="form-input w-100 py-2 email" type="text" id="email-login" />
            </div>
            <div class="form-group">
                <label for="password-login"></label>
                <input placeholder="Password" class="form-input w-100 py-2" type="password" id="password-login" />
            </div>
            <div class="form-group mt-4">
                <button class="btn btn-primary w-75 py-2 mr-4 fs-4 submit" type="submit">Login</button>
            </div>
        </form>
    </div>

    {{!-- Signup --}}
    <div class="col-12 col-md-5 card p-4 mx-2 sign-up">
        <h2 class="card-title sign">Signup</h2>

        <form class="form signup-form card-text">
            <div class="form-group my-2">
                <label for="name-signup"></label>
                <input placeholder="Name" class="form-input w-100 py-2" type="text" id="name-signup" />
            </div>
            <div class="form-group my-2">
                <label for="phone-signup"></label>
                <input placeholder="Phone" class="form-input w-100 py-2 " type="text" id="phone-signup" />
            </div>
            <div class="form-group my-2">
                <label for="email-signup"></label>
                <input placeholder="Email" class="form-input w-100 py-2" type="text" id="email-signup" />
            </div>
            <div class="form-group my-2">
                <label for="password-signup"></label>
                <input placeholder="Password" class="form-input w-100 py-2" type="password" id="password-signup" />
            </div>
            <div class="form-group my-2">
                <label class="signup"  for="role-signup sign">Signup as</label>
                <select class="form-input w-100 py-2" id="role-signup">
                    <option class="renter" value="renter">Renter</option>
                    <option class="manager" value="property_manager">Property Manager</option>
                </select>
            </div>
            <div class="form-group mt-4">
                <button class="btn btn-primary w-75 py-2 mr-4 fs-4 submit" type="submit">Signup</button>
            </div>
        </form>
    </div>
</div>

{{!-- event handlers in login.js --}}
<script src="./js/login.js"></script>